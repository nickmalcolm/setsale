<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title><%= content_for?(:title) ? yield(:title) : "setsale" %></title>
  <meta name="description" content="">
  <meta name="author" content="">

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">

  <%= stylesheet_link_tag "960", "boiler", "application", "styles" %>
  <%= javascript_include_tag "libs/modernizr-1.7.min" %>
  <%= csrf_meta_tag %>

</head>

<body>
  
  <header>
    <div class="container12 clearfix">
      <div class="title grid3">
        <%= content_tag :a, :href => root_url do %>
          <%= image_tag "logo.svg", :style=>"height:50px;", :alt=>"setsale" %>
        <% end %>
      </div>
      
      <div id="nav" role="navigation" class="grid6">
        <ul id="tabs">
          <% if current_shop %>
            <li>
              <%= link_to "Calendar", "#" %>
            </li>
            <li>
              <%= link_to "Statistics", "#" %>
            </li>
            <li>
              <%= link_to "Sign Out", "#" %>
            </li>
          <% else %>
            <li>
              <%= link_to "Sign In / Install", login_path %>
            </li>
          <% end %>  
          <li>
            <%= link_to "Support", "#" %>
          </li>
        </ul>
      </div>
    </div>
  </header>

  <div id="container" class="container12 clearfix">
    <div id="main" role="main" class="grid12">
      <!-- Flash error & notice-->
      <% if flash[:error] %> <div id="flasherrors"><%= flash[:error] %></div><% end %>
      <% if flash[:notice] %><div id="flashnotices"><%= flash[:notice] %></div><% end %>

      
      <div>
        <%= content_tag :h1, yield(:title) if show_title? %>
        <%= yield %>
      </div>
    </div>
    <footer>

    </footer>
  </div> <!-- eo #container -->


  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.js"></script>
  <script>window.jQuery || document.write("<script src='javascripts/libs/jquery-1.5.1.min.js'>\x3C/script>")</script>

